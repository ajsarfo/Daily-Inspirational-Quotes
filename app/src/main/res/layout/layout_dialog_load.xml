<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preparing_quotes"
        android:layout_gravity="center"
        android:fontFamily="@font/raleway_bold"
        android:textSize="20sp"
        android:textColor="?attr/colorOnSurface"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:text="@string/please_wait"
        android:fontFamily="@font/raleway_bold"
        android:textSize="16sp"
        android:textColor="@color/color_category_text_gray"/>

    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/first"
            android:layout_width="@dimen/loading_indicator_size"
            android:layout_height="@dimen/loading_indicator_size"
            android:layout_marginRight="@dimen/loading_indicator_margin"
            android:layout_marginLeft="@dimen/loading_indicator_margin"
            app:cardBackgroundColor="@color/color_loading_indicator_grey"
            app:shapeAppearanceOverlay="@style/CornerSize50Percent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/second"
            android:layout_width="@dimen/loading_indicator_size"
            android:layout_height="@dimen/loading_indicator_size"
            android:layout_marginRight="@dimen/loading_indicator_margin"
            android:layout_marginLeft="@dimen/loading_indicator_margin"
            app:cardBackgroundColor="@color/color_loading_indicator_grey"
            app:shapeAppearanceOverlay="@style/CornerSize50Percent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/third"
            android:layout_width="@dimen/loading_indicator_size"
            android:layout_height="@dimen/loading_indicator_size"
            android:layout_marginRight="@dimen/loading_indicator_margin"
            android:layout_marginLeft="@dimen/loading_indicator_margin"
            app:cardBackgroundColor="@color/color_loading_indicator_grey"
            app:shapeAppearanceOverlay="@style/CornerSize50Percent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/forth"
            android:layout_width="@dimen/loading_indicator_size"
            android:layout_height="@dimen/loading_indicator_size"
            android:layout_marginRight="@dimen/loading_indicator_margin"
            android:layout_marginLeft="@dimen/loading_indicator_margin"
            app:cardBackgroundColor="@color/color_loading_indicator_grey"
            app:shapeAppearanceOverlay="@style/CornerSize50Percent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fifth"
            android:layout_width="@dimen/loading_indicator_size"
            android:layout_height="@dimen/loading_indicator_size"
            android:layout_marginRight="@dimen/loading_indicator_margin"
            android:layout_marginLeft="@dimen/loading_indicator_margin"
            app:cardBackgroundColor="@color/color_loading_indicator_grey"
            app:shapeAppearanceOverlay="@style/CornerSize50Percent"/>

    </LinearLayout>
</LinearLayout>
