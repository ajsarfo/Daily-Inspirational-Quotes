<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WisdomLessons" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/activity_background</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/textColorPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>

          <!-- App colors -->
        <item name="appToolbarColor">?attr/colorPrimary</item>
        <item name="appCustomToolbarColor">@color/color_primary</item>
        <item name="appToolbarTitleColor">@color/black</item>
        <item name="appCustomToolbarTitleColor">@android:color/white</item>
        <item name="appCustomToolbarNavIconColor">?attr/appCustomToolbarTitleColor</item>
        <item name="appBgColor">?attr/colorSurface</item>
        <item name="appRandomQuoteBgColor">#78E6EA</item>
        <item name="appRandomQuoteTextColor">@color/color_category_text_gray</item>
        <item name="appRandomQuoteSizeColor">#303030</item>
        <item name="appCategoryColor">?attr/colorOnSurface</item>
        <item name="appListQuoteColor">@color/white</item>
    </style>

    <style name="Theme.WisdomLessons.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/raleway_bold</item>
    </style>

    <style name="CornerSize50Percent" parent="ShapeAppearanceOverlay">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>